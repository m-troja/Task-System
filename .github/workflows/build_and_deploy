name: Build and version
on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: fedora-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Install .NET
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: 9.0
      - name: Install GitVersion
        uses: gittools/actions/gitversion/setup@v2
        with:
          versionSpec: '5.x'
      - name: Run GitVersion
        id: gitversion
        uses: gittools/actions/gitversion/execute@v2
      - name: Build
        run: dotnet build --configuration Release /p:Version=${{ steps.gitversion.outputs.fullSemVer }}
      - name: Install SSH keys
        run: |
          install -m 600 -D /dev/null ~/.ssh/id_rsa
          echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          ssh-keyscan -H ${{ secrets.SSH_HOST }} > ~/.ssh/known_hosts

      - name: Upload build via rsync
        run: |
          VERSION=${{ steps.gitversion.outputs.fullSemVer }}
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }} "mkdir -p '${{ secrets.WORK_DIR }}/$VERSION'"
          unlink latest
          ln -s $VERSION latest
          rsync -avz bin/Release/net9.0/ ${{ secrets.SSH_USER }}@${{ secrets.SSH_HOST }}:${{ secrets.WORK_DIR }}/$VERSION/

      - name: Cleanup
        run: rm -rf ~/.ssh
